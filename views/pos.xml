<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_feinvoice_config_view_form_" model="ir.ui.view">
        <field name="name">pos.config.posfeinvoice.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Add boolean and many2one field in pos settings-->
            <xpath expr="//h2[@name='order']" position="after">
                
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="iface_create_delivered_sale_order" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_create_delivered_sale_order" />
                    </div>
                </div>

                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="restrict_sales_amt"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="restrict_sales_amt"/>
                        <div class="content-group mt16" attrs="{'invisible': [('restrict_sales_amt', '=', False)]}">
                            <field name="restrict_amt"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
    
 </odoo>
